+  LIBPL='$(prefix)'"/lib64/python${VERSION}/config-${LDVERSION}-${PLATFORM_TRIPLET}"
 fi
 
 
diff -Naur Python-3.7.5/configure.ac Python-3.7.5.tpg/configure.ac
